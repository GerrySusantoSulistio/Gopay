<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gopay"
        android:layout_width="176dp"
        android:layout_height="146dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165"
        app:srcCompat="@drawable/gopay" />


    <TextView
        android:id="@+id/label_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Saldo"
        app:layout_constraintTop_toBottomOf="@+id/gopay"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="57dp" />

    <TextView
        android:id="@+id/value_saldo"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toTopOf="@+id/label_saldo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Contact"
        app:layout_constraintTop_toBottomOf="@+id/value_saldo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="57dp" />

    <EditText
        android:id="@+id/value_phone"
        android:layout_width="207dp"
        android:layout_height="29dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintTop_toTopOf="@+id/contact"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp" />

    <Button
        android:id="@+id/pay_and_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:onClick="pay"
        android:text="PAY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gopay"
        app:layout_constraintVertical_bias="0.292" />

    <Button
        android:id="@+id/History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:onClick="history"
        android:text="HISTORY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/gopay"
        app:layout_constraintVertical_bias="0.289" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:onClick="send"
        android:text="SEND"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gopay"
        app:layout_constraintVertical_bias="0.006"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>